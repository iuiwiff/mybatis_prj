<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.exam3">
	<!-- cp_emp 테이블 레코드 변경 
		사원번호(empno)에 해당하는 레코드의 ename, sal, comm, hob, deptno를 변경
	-->
	<update id="updateCpEmp" parameterType="kr.co.sist.vo.CpEmpVO">
		update cp_emp
		 set ename=#{ename}, sal=#{sal}, comm=#{comm}, job=#{job}, <!-- {getter} 대소문자 가림 -->
		 	 deptno=#{deptno}
		 where empno=#{empno}
	</update>
	
	<!-- cp_emp테이블에서 사원번호에 해당하는 레코드를 삭제 
		단일 값은 기본형 데이터형이다 wrapper클래스를 사용할 수 있다.-->
	<delete id="deleteCpEmp" parameterType="Integer">
		delete cp_emp
		where empno=#{ empno }
	</delete>
	
	<!-- 한 행 조회 
		cp_emp 테이블에서 사원번호에 해당하는 레코드를 조회
		조회되는 컬럼명과 setter명이 다르다면 alias를 사용하여 일치하면 된다.
		-->
	<select id="selectOneCpEmp" resultType="kr.co.sist.domain.CpEmpDomain" 
		parameterType="int">
		select ENAME, HIREDATE hiredatestr, SAL, COMM, JOB, DEPTNO
		from CP_EMP
		where EMPNO=#{ empno }
	</select>
	
	<!-- 여러 행 조회 		
		cp_emp 테이블에서 부서번호에 해당하는 레코드를 조회
		조회되는 컬럼명과 setter명이 다르다면 alias를 사용하여 일치하면 된다.
		-->
	<select id="selectAllCpEmp" resultType="kr.co.sist.domain.CpEmpDomain"
		parameterType="Integer">
		select empno, ename, hiredate, sal, comm, job, deptno
		from cp_emp
		where deptno=#{ deptno }
	</select>
</mapper>